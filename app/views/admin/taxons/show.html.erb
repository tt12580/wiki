<% provide(:title, @taxon.list) %>
<div class="main-container container">
  <div class="row">
    <div class="sidebar wiki-sidebar col-md-6">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div class="markdown">
            <h3>公告</h3>
            <ol class="notices">
              <%= render 'shared/notices' %>
              <li class="more"><%= link_to 'more',more_path%></li>
            </ol>
           </div>
        </div>
      </div>
    </div>
    <%= render 'shared/nav' %>
  </div>
</div>
<div class="main-container container">
  <div class="row">
    <div class="sidebar wiki-sidebar col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <strong>文章类别</strong>
          <ul>
            <% @taxons.each do |taxon| %>
              <li><%= link_to taxon.list, taxon_path(taxon) %></li>
            <% end %>
         </ul>
       </div>
     </div>
   </div>
  <div class="col-md-9">
    <% @wenzhangs.each do |wenzhang| %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= wenzhang.head %></div> 
        <div class="panel-body"><%= raw wenzhang.content %></div>
      </div>
    <% end %>
  </div>
  <div class="foot">
    <%= render 'shared/footer' %>
  </div>
