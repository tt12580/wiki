<% provide(:title, "Edit") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [:admin, @user] do |f| %>
        <%= f.input :email %>
        <%= f.input :roles_mask, collection: Role.all.map{|t| [t.id]}  %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
