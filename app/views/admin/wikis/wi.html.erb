<% provide(:title, "Wiki") %>
<div class="container">
  <div class="row">
    <div class="col-md-4 ">
      <%= link_to 'New Wiki', new_admin_wiki_path, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
<%= form_tag admin_wi_path, method: :get do %>
  <%= label_tag :mulu %>
  <%= text_field_tag :mulu %>
  <%= label_tag :id %>
  <%= text_field_tag :id %>
  <%= submit_tag 'search' %>
<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td>#</td>
      <td>Mulu</td>
      <td>Edit</td>
      <td>Delete</td>
    </tr>
  </thead>
  <tbody>
      <%= paginate @wikis, :theme => 'twitter-bootstrap-3' %>
      <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.id %></td>
        <td><%= raw wiki.mulu %></td>
        <td><%= link_to 'edit', edit_admin_wiki_path(wiki), class: 'btn btn-primary' %></td>
        <td><%= link_to 'delete', [:admin, wiki], method: :delete, class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
  </tbody>
</table>
