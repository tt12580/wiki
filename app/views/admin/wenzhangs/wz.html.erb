<% provide(:title, "文章") %>
<div class="container">
  <div class="row">
    <div class="col-md-4 ">
      <div class="panel">
        <%= link_to 'New Wenzhang', new_admin_wenzhang_path, class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>
<div class="search">
  <%= form_tag admin_wz_path, method: :get do %>
    <%= label_tag :head %>
    <%= text_field_tag :head %>
    <%= label_tag :content %>
    <%= text_field_tag :content %>
    <%= label_tag :list %>
    <%= text_field_tag :list %>
    <%= label_tag :id %>
    <%= text_field_tag :id %>
    <%= submit_tag 'search' %>
  <% end %>
</div>
<div class="panel">
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr class="success">
          <td>#</td>
          <td>Head</td>
          <td>Content</td>
          <td>Taxon</td>
          <td>Edit</td>
          <td>Delete</td>
        </tr>
      </thead>
      <tbody>
        <%= paginate @wenzhangs, :theme => 'twitter-bootstrap-3' %>
        <% @wenzhangs.each do |wenzhang| %>
        <tr>
          <td><%= wenzhang.id %></td>
          <td><%= wenzhang.head %></td>
          <td><%= raw wenzhang.content %></td>
          <td><%= raw wenzhang.taxon.list %></td>
          <td><%= link_to 'edit', edit_admin_wenzhang_path(wenzhang), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'delete', [:admin, wenzhang], method: :delete, class: 'btn btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
